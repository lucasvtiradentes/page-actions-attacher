{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    ".gitignore": "package-lock.json, yarn.lock, pnpm-lock.yaml",
    "package.json": ".czrc, .lintstagedrc, .editorconfig, .eslintignore, .eslintrc, .lintstagedrc.json, .prettierignore, .prettierrc, commitlint.config.js, tsconfig.json",
    "release.config.js": ".npmignore, rollup.config.js",
    "README.md": "LICENSE"
  },
  "files.associations": {
    ".czrc": "json"
  }
}
